<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <title>Family Tree</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/colors.css">
  </head>
  <body>
    <div
      id="page"
      class="d-flex flex-column"
      style="width: 100vw; height: 100vh"
    >
      <div id="menu"><%- include('navbar') %></div>
      <div
        id="alertBar"
        class="text-center fw-bold"
        style="height: 1.5em"
      ></div>
      <div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      const displayMessage = '<%= displayMessage.text %>';
      const showMessage = (msg, color) => {
        const msgDiv = document.getElementById('alertBar');
        let bg;
        msgDiv.innerText = msg;
        switch (color) {
          case 'red':
            color = 'OrangeRed';
            bg = 'Pink';
            break;
          case 'green':
            color = 'Green';
            bg = 'MediumSpringGreen';
            break;
          case 'blue':
          default:
            color = 'DarkBlue';
            bg = 'Cyan';
            break;
        }
        msgDiv.style.color = color;
        msgDiv.style.backgroundColor = bg;
        setTimeout(() => {
          msgDiv.style.color = 'white';
          msgDiv.style.backgroundColor = 'white';
        }, 2000);
      };

      if (displayMessage) {
        let color = '<%= displayMessage.background %>';
        showMessage(displayMessage, color);
      }
    </script>
    <script src="/script.js"></script>
  </body>
</html>
